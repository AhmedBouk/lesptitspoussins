{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe{% endblock title %}

{% block body %}

    {{ parent() }}
    <div class="clear"></div>

    {#   HERE#}

    <!------ Include the above in your HEAD tag ---------->
<form method="post">

    <h1 class="text-center mt-5">Modifier votre mot de passe</h1>

    <div class="contentform " >
                <div class="form-group">

                        <hr class="colorgraph">
                            <div class="row">
                                {% for flash_message in app.session.flashBag.get('danger') %}
                                    <div class="alert alert-danger">
                                        {{ flash_message }}
                                    </div>
                                {% endfor %}
                            </div>
                        <div class="row">

                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="old_password" class="mb-3">Ancien mot de passe</label>
                                    <input type="password" name="old_password">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="new_password" class="mb-3">Nouveau mot de passe ( minimum 6 caractères et maximum 34 caractères )</label>
                                    <input type="password" name="new_password">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="confirm_new_password" class="mb-3">Confirmer nouveau mot de passe</label>
                                    <input type="password" name="confirm_new_password">
                                </div>
                            </div>
                        </div>



                        <hr class="colorgraph">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <input class="btn btn-success btn-block pb-lg-4" type="button" onclick="location.href='{{ path('dashboardparent', {'id' : app.user.id}) }}';" value="Retour" />
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <input type="submit" class="btn btn-success btn-block  pb-lg-4" value="Enregistrer">
                            </div>

                        </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>
</form>


{% endblock body %}

