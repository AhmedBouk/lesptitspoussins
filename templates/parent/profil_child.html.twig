    {% extends 'base.html.twig' %}

{% block body %}
    <div class="clear"></div>
    {{ parent() }}
    <div class="container mt-5"style="padding-top: 100px;">
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <div class="col-md-12 mb-5 well" id="rightPanel">
            <div class="row">
                {% if error %}
                    <div class="alert alert-danger">
                        <ul class="list-unstyled mb-0">
                            <li><span class="initialism badge-danger badge">Error</span>
                                <span class="error">{{ error.messageKey| trans(error.messageData, 'security') }}</span>
                            </li>
                        </ul>
                    </div>
                {% endif %}
                <div class="col-md-12">
                    {{ form_start(form) }}
                        <h2 class="text-center">Renseigner le profil de votre enfant</h2>
                        <hr class="colorgraph">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.nom) }}
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.prenom) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_row(form.dateNaissance, { 'attr': { 'class' : 'col-xs-12 col-sm-6 col-md-6'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.allergie) }}
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.maladies) }}
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.traitement) }}
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
