{% extends 'base.html.twig' %}

{% block body %}

    {{ parent() }}


    {#   HERE#}

<div class="clear"></div>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <!------ Include the above in your HEAD tag ---------->

    <div class="container emp-profile" style="padding-top: 100px;">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="https://www.ville-martignas.fr/medias/2018/02/kermesse-creche-dolto-1.jpg" alt="creche"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        <h2>
                            {{ name }}
                        </h2>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">A propos</a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

{#            profil#}
            <div class="row">

                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nom</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ name }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ mail }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Téléphone</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ telephone }}</p>
                                </div>
                            </div>
                        </div>


                            <div class="row">
                                <div class="col-md-6">
                                    <label>Tarif a l'heure</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ tarif }}</p>
                                </div>
                            </div>

                      {#  <div class="row">
                            <div class="col-md-6">
                                <label>Horaire</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ horaire }}</p>
                            </div>
                        </div>#}

                            <div class="row">
                                <div class="col-md-6">
                                    <label>Disponibilité</label>
                                </div>
                                <div class="col-md-6">
                                    {% if dispo == true %}
                                        <p>Oui</p>
                                    {% else %}
                                        <p>Non</p>
                                    {% endif %}

                                </div>
                            </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="container mt-5 mb-5 text-center">
        <a href="index">
            <button class="btn  btn-md  hmouda">Retour</button>
        </a>
        <!-- Content here -->
        <a href="">
            <button type="button" class="btn  hmed">Accueil</button>
        </a>
    </div>
{% endblock body %}