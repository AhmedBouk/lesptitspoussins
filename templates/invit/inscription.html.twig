{% extends 'base.html.twig' %}

{% block body %}
    <div class="clear"></div>
    {{ parent() }}
    {{ form_start(form) }}
    <h1 class="text-center mt-5">Insription</h1>
    <div class="contentform">
        <div class="form-group">
            {{form_row(form.mail)}}
        </div>

        <div class="form-group">
            {{form_row(form.password.first)}}
        </div>

        <div class="form-group">
            {{form_row(form.password.second)}}
        </div>

        <div class="form-group">
            {{ form_row(form.Conditionsdutilisations,{'attr':{'class':'box'}, 'label' : 'Pour lire les conditions d\'utilisations c\'est <a href="#">ici</a>' }) }}
        </div>

    </div>

    <input type="hidden" name="token"  value="{{ csrf_token('create-parentt') }}">


    <input type="submit"  value="S'inscrire" class="bouton-contact mb-2">
    {{ form_end(form) }}


</form>

{% endblock body %}

