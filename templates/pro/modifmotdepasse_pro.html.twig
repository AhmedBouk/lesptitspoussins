{% extends 'base.html.twig' %}

{% block body %}

    {{ parent() }}
    <div class="clear"></div>

    {#   HERE#}
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <!------ Include the above in your HEAD tag ---------->

    <div class="container mt-5 " style="padding-top: 100px;">
        <div class="row" id="main">
            <div class="col-md-12 mb-5 well" id="rightPanel">
                <div class="row">
                    <div class="col-md-12">
                        <form action="" method="post">
                            <h2>Renseigner votre profil</h2>
                            <hr class="colorgraph">
                            <div class="row">
                                {% for flash_message in app.session.flashBag.get('danger') %}
                                    <div class="alert alert-danger">
                                        {{ flash_message }}
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="row">



                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label for="old_password">Ancien mot de passe</label>
                                        <input type="password" name="old_password">
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label for="new_password">Nouveau mot de passe ( minimum 6 caractères et maximum 34 caractères )</label>
                                        <input type="password" name="new_password">
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label for="confirm_new_password">Confirmer nouveau mot de passe</label>
                                        <input type="password" name="confirm_new_password">
                                    </div>
                                </div>
                            </div>



                            <hr class="colorgraph">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <a href="{{ path('prodashboard', { 'id' : app.user.id}) }}" class="btn btn-success btn-block btn-lg">Retour</a>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <input type="submit" class="btn btn-success btn-block btn-lg" value="Enregistrer">
                                </div>

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>


{% endblock body %}